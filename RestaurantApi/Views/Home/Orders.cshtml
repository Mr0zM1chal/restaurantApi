    $('#div1').ready(function () {
        $.ajax({
            type: "GET",
            url: "/api/Table/GetOrders",
            contentType: "application/json; charset=utf-8",
            dataType: "json",

            success: function (data) {
                console.log(data);
                dataX = data;
                var html = '';
